<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    tools:context=".Activities.Signup.SignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >



        <ImageView
            android:layout_width="83dp"
            android:layout_height="57dp"
            android:src="@drawable/logo"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:gravity="center"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/robot_medium"
            android:layout_gravity="center"
            />



        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardCornerRadius="30dp"
            android:layout_marginTop="50dp"
            app:strokeColor="@color/purple_200"

            >
            <ImageView
                android:id="@+id/imageUser"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_avatar"
                />
        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginTop="-20dp"

            app:cardCornerRadius="20dp"
            >
            <ImageView
                android:id="@+id/imageAdd"
                android:layout_width="30dp"
                android:elevation="10dp"
                android:layout_height="30dp"

                android:src="@drawable/ic_plus"
                />
        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/white"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_margin="10dp"
                    android:layout_gravity="center_vertical"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/icon_back_color"
                    >
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_profile"
                        android:layout_gravity="center"
                        />
                </androidx.cardview.widget.CardView>

                <EditText
                    android:id="@+id/editTextName"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:hint="Name"
                    android:textSize="20dp"
                    android:fontFamily="@font/robot_medium"
                    android:background="@color/white"
                    android:paddingStart="20dp"
                    android:paddingEnd="10dp"
                    />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/white"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_margin="10dp"
                    app:cardElevation="0dp"
                    android:layout_gravity="center_vertical"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/icon_back_color"
                    >
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_message"
                        android:layout_gravity="center"
                        />
                </androidx.cardview.widget.CardView>

                <EditText
                    android:id="@+id/editTextEmail"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:hint="Email"
                    android:textSize="20dp"
                    android:fontFamily="@font/robot_medium"
                    android:background="@color/white"
                    android:paddingStart="20dp"
                    android:paddingEnd="10dp"
                    />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/white"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_margin="10dp"
                    android:layout_gravity="center_vertical"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/icon_back_color"
                    >
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_lock"
                        android:layout_gravity="center"
                        />
                </androidx.cardview.widget.CardView>

                <EditText
                    android:id="@+id/editTextPass"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:hint="Password"
                    android:textSize="20dp"
                    android:inputType="textPassword"
                    android:fontFamily="@font/robot_medium"
                    android:background="@color/white"
                    android:paddingStart="20dp"
                    android:paddingEnd="10dp"
                    />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            >
            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/checkbox"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:checked="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="I accept all the"
                android:textSize="15sp"
                android:layout_marginEnd="10dp"
                android:textStyle="bold"
                android:textColor="#80230A06"
                android:gravity="center"
                android:fontFamily="@font/robot_medium"
                />
            <TextView
                android:id="@+id/txtTermsAndConditions"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Terms &amp; Conditions"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_marginEnd="10dp"
                android:textStyle="bold"
                android:textColor="#0C54A0"
                android:fontFamily="@font/robot_medium"
                />
        </LinearLayout>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSignup"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:backgroundTint="#0C54A0"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            app:cornerRadius="10dp"
            android:text="Sign Up"
            />

        <LinearLayout
            android:id="@+id/lyt_Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account?"
                android:textSize="15sp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textColor="#80230A06"
                android:fontFamily="@font/robot_medium"
                android:layout_gravity="end"
                />
            <TextView
                android:id="@+id/txtLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log In"
                android:textSize="15sp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textColor="#0C54A0"
                android:fontFamily="@font/robot_medium"
                android:layout_gravity="end"
                />
        </LinearLayout>
    </LinearLayout>
</ScrollView>