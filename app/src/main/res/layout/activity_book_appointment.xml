<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.Client.BookAppointmentActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


    <include
        android:id="@+id/lytHeader"
        layout="@layout/lyt_header"/>

    <CalendarView
        android:id="@+id/calenderView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time Slots"
        android:layout_marginStart="10dp"
        android:textSize="18dp"
        android:textColor="#0D2A3E"
        android:fontFamily="@font/robot_medium"
        android:layout_gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        >

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_back"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"

            />
        <ImageView
            android:id="@+id/imgNext"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_next"
            />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time"
                android:gravity="center"
                android:textSize="18dp"
                android:textColor="@color/purple_200"
                android:fontFamily="@font/robot_medium"
                android:layout_gravity="center"
                />

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#00ACC1"
                android:textColor="@color/white"
                app:cornerRadius="10dp"
                android:text="Not Selected"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textSize="18dp"
                android:gravity="center"
                android:textColor="@color/purple_200"
                android:fontFamily="@font/robot_medium"
                android:layout_gravity="center"
                />

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#00ACC1"
                android:textColor="@color/white"
                app:cornerRadius="10dp"
                android:text="Not Selected"
                />

        </LinearLayout>



    </LinearLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnBookAp"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:backgroundTint="#0C54A0"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:cornerRadius="10dp"
        android:text="Book Appointment"
        />
    </LinearLayout>


</ScrollView>